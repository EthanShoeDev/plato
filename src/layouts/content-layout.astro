---
import BaseHead from '@/layouts/base-head-layout.astro';

import { NavBar } from '@/components/layouts/nav-bar';

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead />
    <title>{title}</title>
  </head>
  <body class="bg-background flex flex-col min-h-screen">
    <div class="bg-background border flex items-center p-4">App Bar</div>
    <div class="grow flex">
      <NavBar client:load />
      <div class="grow p-4">
        <h1>{title}</h1>
        <slot />
      </div>
    </div>
  </body>
</html>
